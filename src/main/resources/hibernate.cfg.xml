<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/semeru_jsf_maven_db?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">vega18</property>
    <property name="hibernate.current_session_context_class">thread</property>
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping resource="br/com/model/entities/Tipoendereco.hbm.xml"/>
    <mapping resource="br/com/model/entities/Sexo.hbm.xml"/>
    <mapping resource="br/com/model/entities/Cidade.hbm.xml"/>
    <mapping resource="br/com/model/entities/Tipologradouro.hbm.xml"/>
    <mapping resource="br/com/model/entities/Estado.hbm.xml"/>
    <mapping resource="br/com/model/entities/Endereco.hbm.xml"/>
    <mapping resource="br/com/model/entities/Pessoa.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
